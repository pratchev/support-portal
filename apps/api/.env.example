# Environment
NODE_ENV=development

# Server
PORT=3001

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/support_portal?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Azure OpenAI (Optional)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=gpt-4

# Microsoft Graph API (Optional - for email integration)
GRAPH_CLIENT_ID=
GRAPH_CLIENT_SECRET=
GRAPH_TENANT_ID=

# SMTP (Fallback email provider)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=
SMTP_PASSWORD=

# Email Configuration
FROM_EMAIL=support@supportportal.com
FROM_NAME=Support Portal

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Frontend URL
FRONTEND_URL=http://localhost:3000
